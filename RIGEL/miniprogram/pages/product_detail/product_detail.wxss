.banner{
  display: flex;
  flex-direction: row;
  align-self: center;
  width: 100%;
  height: 750rpx;
}
.banner_1{
  width: 100%;
  height: 750rpx;
  overflow: hidden;
}
.product{
  display: flex;
  font-display: column;
  width: 90%;
  align-self: center;
  margin-bottom: 20rpx;
}
.product_1{
  display: flex;
  font-display: row;
  width: 80%;
  font-size: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.line{
  width: 100%;
  height: 5rpx;
  background-color: rgb(192, 192, 192);
  margin-bottom: 10rpx;
}
.product_dt{
  width: 100%;
  height: 100rpx;
  display: flex;
  font-display: row;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  padding-left: 20rpx;
  padding-top: 35rpx;
}
.comitem{
  border-bottom: 2px solid gainsboro;
  margin-left: 20rpx;
  margin-top: 10rpx;
  margin-right: 20rpx;
}
.com{
  font-size: 35rpx;
  color: #009cde;
  margin-top: 50rpx;
  margin-left: 20rpx;
}
.input{
  border: 2px solid gainsboro;
  margin-top: 100rpx;
  margin-bottom: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
}
.remark{
  font-size: 30rpx;
}
.gname{
  font-size: 35rpx;
}